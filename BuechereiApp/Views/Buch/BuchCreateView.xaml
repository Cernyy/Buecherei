<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BuechereiApp.BuchCreateView"
             Title="Create"
             BackgroundColor="White">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.1*"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>

        <Button Text="Edit" Clicked="EditSachgebiet" Grid.RowSpan="2"  Grid.Row="0" BackgroundColor="#cccccc" TextColor="#252422"/>
        <Label Text="Sachgebiet" FontSize="Medium" Grid.ColumnSpan="2" Grid.Column="1" Grid.Row="0"/>
        <Label Text="{Binding Sachgebiet}" x:Name="LabelSachgebiet" FontSize="Small" Grid.ColumnSpan="2" Grid.Column="1" Grid.Row="1" TextColor="Black"/>

        <Button Text="Edit" Clicked="EditTitel" Grid.RowSpan="2"  Grid.Row="2" BackgroundColor="#cccccc" TextColor="#252422"/>
        <Label Text="Titel" FontSize="Medium" Grid.ColumnSpan="2" Grid.Column="1" Grid.Row="2"/>
        <Label Text="{Binding Titel}" x:Name="LabelTitel" FontSize="Small" Grid.ColumnSpan="2" Grid.Column="1" Grid.Row="3" TextColor="Black"/>

        <Button Text="Edit" Clicked="EditAutor" Grid.RowSpan="2"  Grid.Row="4" BackgroundColor="#cccccc" TextColor="#252422"/>
        <Label Text="Autor" FontSize="Medium" Grid.ColumnSpan="2" Grid.Column="1" Grid.Row="4"/>
        <Label Text="{Binding Autor}" x:Name="LabelAutor" FontSize="Small" Grid.ColumnSpan="2" Grid.Column="1" Grid.Row="5" TextColor="Black"/>

        <Button Text="Edit" Clicked="EditOrt" Grid.RowSpan="2"  Grid.Row="6" BackgroundColor="#cccccc" TextColor="#252422"/>
        <Label Text="Ort" FontSize="Medium" Grid.ColumnSpan="2" Grid.Column="1" Grid.Row="6"/>
        <Label Text="{Binding Ort}" x:Name="LabelOrt" FontSize="Small" Grid.ColumnSpan="2" Grid.Column="1" Grid.Row="7" TextColor="Black"/>

        <Button Text="Edit" Clicked="EditErscheinungsjahr" Grid.RowSpan="2"  Grid.Row="8" BackgroundColor="#cccccc" TextColor="#252422"/>
        <Label Text="Erscheinungsjahr" FontSize="Medium" Grid.ColumnSpan="2" Grid.Column="1" Grid.Row="8"/>
        <Label Text="{Binding Erscheinungsjahr}" x:Name="LabelErscheinungsjahr" FontSize="Small" Grid.ColumnSpan="2" Grid.Column="1" Grid.Row="9" TextColor="Black"/>

        <Button Text="Edit" Clicked="EditBuchnummer" Grid.RowSpan="2"  Grid.Row="8" BackgroundColor="#cccccc" TextColor="#252422"/>
        <Label Text="Buchnummer" FontSize="Medium" Grid.ColumnSpan="2" Grid.Column="1" Grid.Row="8"/>
        <Label Text="{Binding Buchnummer}" x:Name="LabelBuchnummer" FontSize="Small" Grid.ColumnSpan="2" Grid.Column="1" Grid.Row="9" TextColor="Black"/>

        <Button Text="Abbrechen" Clicked="Abbrechen" Grid.RowSpan="1" Grid.Column="1" Grid.Row="10" BackgroundColor="#cccccc" TextColor="#252422" Margin="3"/>
        <Button Text="Speichern" Clicked="SaveChanges" Grid.RowSpan="1" Grid.Column="2" Grid.Row="11" BackgroundColor="#cccccc" TextColor="#252422" Margin="3"/>
    </Grid>
</ContentPage>